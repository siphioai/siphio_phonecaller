# Application Settings
APP_NAME="Siphio AI Phone Receptionist"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True  # Set to False in production
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
SECRET_KEY="your-secret-key-here-change-in-production"  # Generate with: openssl rand -hex 32
ENCRYPTION_KEY="gAAAAABhExample_Valid_Fernet_Key_44_Chars_B64="  # Example only! Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
JWT_SECRET_KEY="your-jwt-secret-here-change-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=1  # Increase for production
CORS_ORIGINS='["http://localhost:3000", "http://localhost:8000"]'  # JSON array of allowed origins

# Database
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/siphio_phone"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0
DATABASE_ECHO=False  # Set to True for SQL debugging

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""  # Set if Redis requires authentication
REDIS_POOL_SIZE=10
REDIS_DECODE_RESPONSES=True

# Twilio Configuration
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"  # Your Twilio phone number
TWILIO_WEBHOOK_URL="https://your-domain.com/api/webhooks/incoming-call"
TWILIO_STATUS_CALLBACK_URL="https://your-domain.com/api/webhooks/call-status"

# Deepgram Configuration (Speech-to-Text)
DEEPGRAM_API_KEY="your-deepgram-api-key"
DEEPGRAM_MODEL="nova-2-phonecall"
DEEPGRAM_LANGUAGE="en"
DEEPGRAM_PUNCTUATE=True
DEEPGRAM_DIARIZE=True
DEEPGRAM_NUMERALS=True
DEEPGRAM_PROFANITY_FILTER=False
DEEPGRAM_INTERIM_RESULTS=True

# Anthropic Claude Configuration
ANTHROPIC_API_KEY="your-anthropic-api-key"
CLAUDE_MODEL="claude-3-haiku-20240307"  # Fast model for low latency
CLAUDE_MAX_TOKENS=500
CLAUDE_TEMPERATURE=0.7
CLAUDE_SYSTEM_PROMPT_PATH="prompts/receptionist_system.txt"

# ElevenLabs Configuration (Text-to-Speech)
ELEVENLABS_API_KEY="your-elevenlabs-api-key"
ELEVENLABS_VOICE_ID="your-voice-id"  # Rachel or other voice
ELEVENLABS_MODEL="eleven_turbo_v2_5"  # Latest turbo model for streaming
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.75
ELEVENLABS_STYLE=0.0
ELEVENLABS_USE_SPEAKER_BOOST=True

# Google Calendar Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:8000/api/auth/google/callback"
GOOGLE_CALENDAR_ID="primary"  # Or specific calendar ID
GOOGLE_OAUTH_SCOPES='["https://www.googleapis.com/auth/calendar"]'

# Business Logic Settings
APPOINTMENT_DURATION_MINUTES=30
APPOINTMENT_BUFFER_MINUTES=15
BUSINESS_HOURS_START="09:00"
BUSINESS_HOURS_END="17:00"
BUSINESS_TIMEZONE="America/New_York"
MAX_FUTURE_BOOKING_DAYS=60

# Call Handling Settings
MAX_CALL_DURATION_SECONDS=600  # 10 minutes
SILENCE_THRESHOLD_MS=2000  # 2 seconds of silence
INTERRUPTION_THRESHOLD_MS=500
MAX_RETRY_ATTEMPTS=3
DEFAULT_GREETING="Thank you for calling. How may I help you today?"

# Monitoring & Alerting
PROMETHEUS_METRICS_PATH="/metrics"
ALERT_EMAIL="alerts@siphio.com"
ALERT_WEBHOOK_URL=""  # Slack or other webhook
SENTRY_DSN=""  # Optional: for error tracking

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_CALLS_PER_MINUTE=60
RATE_LIMIT_CALLS_PER_HOUR=1000

# Feature Flags
ENABLE_CALL_RECORDING=False  # Ensure HIPAA compliance before enabling
ENABLE_SMS_CONFIRMATIONS=True
ENABLE_CALENDAR_INTEGRATION=True
ENABLE_MULTI_LANGUAGE=False
ENABLE_VOICE_CLONING=False

# Compliance & Security
HIPAA_COMPLIANT_MODE=True
ENCRYPT_TRANSCRIPTS=True
ENCRYPT_CALL_RECORDINGS=True
DATA_RETENTION_DAYS=90
AUDIT_LOG_ENABLED=True
PII_MASKING_ENABLED=True

# Testing & Development
TEST_MODE=False
MOCK_EXTERNAL_SERVICES=False
NGROK_AUTHTOKEN=""  # For local testing with Twilio